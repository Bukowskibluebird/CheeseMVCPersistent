
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


@foreach (var menu in Model)
{
    <li>
        <a asp-controller="Menu" asp-action="ViewMenu" asp-route="@menu.ID"><ul>@menu.Name</ul></a>
</li>
} 

<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>


@if (Model.Count == 0)
{
    <p>No categories yet!</p>
}

